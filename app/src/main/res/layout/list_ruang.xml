<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="325dp">

    <ImageView
        android:id="@+id/RuangImg"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:background="@drawable/sektk"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="69dp" />

    <!--
     <Button
         android:id="@+id/btnviewKelas"
         android:layout_width="125dp"
         android:layout_height="47dp"
         android:layout_marginBottom="8dp"
         android:layout_marginEnd="8dp"
         android:layout_marginRight="8dp"
         android:layout_marginTop="8dp"
         android:background="@drawable/buttonviewkelas"
         android:text="Lihat Kelas"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="@+id/shadingCard" />-->

    <ImageView
        android:id="@+id/shadingCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/RuangImg"
        app:srcCompat="@drawable/backgroundcardviewkelas"
        tools:layout_editor_absoluteX="36dp" />

    <ImageView
        android:id="@+id/statusAvailable"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/shadingCard"
        app:layout_constraintStart_toStartOf="@+id/shadingCard"
        app:layout_constraintTop_toTopOf="@+id/shadingCard"
        app:srcCompat="@drawable/statusiconavailable" />

    <TextView
        android:id="@+id/NamaRuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="KELAS"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/statusAvailable"
        app:layout_constraintTop_toTopOf="@+id/shadingCard" />

    <TextView
        android:id="@+id/statusPakai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="Terpakai/Tidak"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/shadingCard"
        app:layout_constraintStart_toEndOf="@+id/statusAvailable"
        app:layout_constraintTop_toBottomOf="@+id/NamaRuang" />

</android.support.constraint.ConstraintLayout>